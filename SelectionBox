while wait() do

	for q = 1, 255 do
		wait()
		selection.Color3 = Color3.new((255 - q)/255, q/255, 0/255)
	end
	for w = 1, 255 do
		wait()
		selection.Color3 = Color3.new(0/255, (255 - w)/255, w/255)
	end
	for e = 1, 255 do
		wait()
		selection.Color3 = Color3.new(e/255, 0/255, (255 - e)/255)
	end
end
